<div class="container">
  <h2 class="has-text-centered p-3 has-text-weight-bold is-size-2">Login</h2>
  <div class="columns is-centered">
    <div class="column is-5-tablet is-4-desktop is-3-widescreen">
      <form action="" class="box has-background-dark has-text-white">
        {{> email}}
        {{> password}}
        <div class="field">
            <a><button class="button is-success" onclick="login(event)">
                Login
            </button></a>
        </div>
      </form>
      <div class="is-flex is-justify-content-center">
        <a href="/sign_up/"><button class="button is-success">
          Sign Up Instead
        </button></a>
      </div>
    </div>
  </div>
</div>